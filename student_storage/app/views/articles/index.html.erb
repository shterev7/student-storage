<h1>Listing students</h1>


<table>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Faculty Number</th>
        <th>Course</th>
        <th>Specialty</th>
        <th></th>
    </tr>

    <% @articles.each do |article| %>
    <tr>
        <td><%= article.firstname %></td>
        <td><%= article.lastname %></td>
        <td><%= article.fn %></td>
        <td><%= article.course %></td>
        <td><%= article.specialty %></td>
        <td><%= link_to 'Show', article_path(article), id:"show" %></td>
        <td><%= link_to 'Edit', edit_article_path(article), id:"edit" %></td>
        <td><%= link_to 'Delete', article_path(article), id:"delete",
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
</table>

<br>
<center><%= link_to 'New student', new_article_path, :id=>'new_student'%></center>

<%= render template: "layouts/application" %>